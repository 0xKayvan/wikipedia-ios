clang-format -style=file -i Wikipedia/Code/*.c
clang-format -style=file -i WikipediaUnitTests/Code/*.h
clang-format -style=file -i WikipediaUnitTests/Code/*.m
#clang-format -style=file -i WikipediaUnitTests/Code/*.c
clang-format -style=file -i WMFKit/*.h
clang-format -style=file -i WMFKit/*.m
#clang-format -style=file -i WMFKit/*.c

