#!/bin/bash

/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew update && brew install npm clang-format rbenv ruby-build carthage
brew upgrade npm clang-format rbenv ruby-build carthage
rbenv install -s
gem install bundler
bundle install
rm -rf .git/hooks/pre-commit
cp -f scripts/clang_format_git_diff .git/hooks/pre-commit

/usr/local/bin/carthage bootstrap --platform iOS

plutil -replace CFBundleVersion -string 4.0.0 Carthage/Build/iOS/SDWebImage.framework/Info.plist